rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /pengguna/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if request.auth != null;
    }

    match /kehadiran/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /pengumuman/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /status_administrasi/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /status_layanan_digital/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /chat/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /chats/{document} {
      allow create: if /databases/$(database)/documents/pengguna/$(request.auth.uid) in request.resource.data.users;
      allow read: if /databases/$(database)/documents/pengguna/$(request.auth.uid) in resource.data.users;
      allow write: if /databases/$(database)/documents/pengguna/$(request.auth.uid) in resource.data.users;
      allow delete: if false;
    }

    match /chat_messages/{document} {
      allow create: if /databases/$(database)/documents/pengguna/$(request.auth.uid) in get(request.resource.data.chat).data.users
&& /databases/$(database)/documents/pengguna/$(request.auth.uid) == request.resource.data.user;
      allow read: if /databases/$(database)/documents/pengguna/$(request.auth.uid) in get(resource.data.chat).data.users;
      allow write: if false;
      allow delete: if false;
    }
  }
}
